FILES = `find . -type f \( -name "*.xpm" -o -name "*.jpg" -o -name "*.xbm" -o -name "*.ppm" -o -name "*.gif" \) -print`

top_srcdir = @top_srcdir@
DESTDIR = @prefix@/lib/pics
INSTALL_DIR = $(SHELL) $(top_srcdir)/mkinstalldirs
INSTALL_DATA = @INSTALL@ -m 644

all:

Makefile: Makefile.in
	picdir=`pwd`
	cd $(top_srcdir) && CONFIG_FILES=$(picdir)/$@ CONFIG_HEADERS= $(SHELL) ./config.status

install:
	$(INSTALL_DIR) $(DESTDIR)
	@for i in $(FILES); do \
	 echo "$(INSTALL_DATA) $$i $(DESTDIR)"; \
	 $(INSTALL_DATA) "$$i" $(DESTDIR); \
	done

uninstall:
	for i in $(FILES); do \
	 rm -f $(DESTDIR)/$$i; \
	done

