    <title>Printing</title>
    <screenshot>
      <screeninfo>Miscellaneous Printing</screeninfo>
        <mediaobject>
          <imageobject>
            <imagedata fileref="miscprint.png" format="PNG"/>
          </imageobject>
          <textobject>
            <phrase>Miscellaneous Printing</phrase>
